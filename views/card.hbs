<h1>Корзина</h1>
{{#if courses.length }}
<div id="card">
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>

            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small red js-remove" data-csrf="{{@root.csrf}}"
                        data-id={{id}}>Удалить</button>
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <button class="btn" type="submit">Сделать заказ</button>
    </form>

    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>